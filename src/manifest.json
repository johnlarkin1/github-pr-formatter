{
  "manifest_version": 3,
  "name": "GitHub PR Formatter",
  "version": "1.0",
  "description": "Customize GitHub PR title formatting",
  "permissions": ["storage", "activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://github.com/*"],
      "js": ["content.js"]
    }
  ]
}
